<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg">

    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:alpha="0.6"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/etnewreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="157dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_contacts_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Enter Full Name"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etnewreg"
        android:layout_alignStart="@+id/etnewreg"
        android:layout_alignLeft="@+id/etnewreg"
        android:layout_alignEnd="@+id/etnewreg"
        android:layout_alignRight="@+id/etnewreg"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:drawableLeft="@drawable/ic_email_white_24dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/etregpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etemail"
        android:layout_alignStart="@+id/etemail"
        android:layout_alignLeft="@+id/etemail"
        android:layout_alignEnd="@+id/etemail"
        android:layout_alignRight="@+id/etemail"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etregpass"
        android:layout_alignStart="@+id/etregpass"
        android:layout_alignLeft="@+id/etregpass"
        android:layout_alignEnd="@+id/etregpass"
        android:layout_alignRight="@+id/etregpass"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/ic_mood_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Enter Your Age"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#cccccc" />

    <Button
        android:id="@+id/btregnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAge"
        android:layout_alignStart="@+id/etAge"
        android:layout_alignLeft="@+id/etAge"
        android:layout_alignEnd="@+id/etAge"
        android:layout_alignRight="@+id/etAge"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/buttonstyle"
        android:text="Register"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvlogbck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAge"
        android:layout_alignStart="@+id/etAge"
        android:layout_alignLeft="@+id/etAge"
        android:layout_alignEnd="@+id/etAge"
        android:layout_alignRight="@+id/etAge"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"
        android:text="Aldready a user?"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/txt_success_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:gravity="center_horizontal"
        android:text="Create Account"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_success_name"
        android:layout_alignStart="@+id/etnewreg"
        android:layout_alignLeft="@+id/etnewreg"
        android:layout_alignEnd="@+id/etnewreg"
        android:layout_alignRight="@+id/etnewreg"
        android:layout_marginStart="-20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="After clicking the Register Button. You will be redirected to Login Screen"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />
</RelativeLayout>