<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    tools:context=".EventDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Shwdetailtit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Shwdetailivimgvw"
            android:layout_width="322dp"
            android:layout_height="98dp" />

        <TextView
            android:id="@+id/Shwdetailtvmdesc"
            android:layout_width="323dp"
            android:layout_height="87dp"
            android:layout_marginTop="14dp"
            android:text="Description"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Shwdetailtvmloc"
            android:layout_width="321dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="Location"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Shwdetailtvmdate"
            android:layout_width="325dp"
            android:layout_height="53dp"
            android:layout_marginTop="14dp"
            android:text="Date"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Shwdetailtvmtime"
            android:layout_width="321dp"
            android:layout_height="54dp"
            android:layout_marginTop="14dp"
            android:text="Time"
            android:textSize="14dp" />

        <Button
            android:id="@+id/Shwdetailbtnbt"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="14dp"
            android:text="Book Tickets"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>


</android.support.v7.widget.CardView>