<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    tools:context=".ShowDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Shwdetailtitsh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Shwdetailivimgvwsh"
            android:layout_width="322dp"
            android:layout_height="98dp" />

        <TextView
            android:id="@+id/Shwdetailtvmdescsh"
            android:layout_width="315dp"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:text="Description"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Shwdetailtvmlocsh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Location"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Shwdetailtvmdatesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Date"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Shwdetailtvmtimesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Time"
            android:textSize="14dp" />

        <Button
            android:id="@+id/Shwdetailbtnbtsh"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="14dp"
            android:text="Book Tickets"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>



</android.support.v7.widget.CardView>